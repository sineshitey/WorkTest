@model IEnumerable<WT.TourPackageModels.TourPackageModel>
@{
    ViewBag.Title = "GetPackagePerDestination";
    IFormatProvider formatProvider =
        new System.Globalization.CultureInfo("en-PH");
}
<h2>Available Tours</h2>
@foreach (var item in Model)
{
    var price = item.PackagePrice.ToString("C", formatProvider);
    <div class="row">
        <div class="col-md-12">
            @Html.DisplayFor(modelItem => item.PackageTourName)
        </div>
        <div class="col-md-12">
            <img src="~/Content/Images/@item.PackageImage" alt="Tour Image" />
        </div>
        <div class="col-md-12">
            <div class="col-md-3"></div>
            <div class="col-md-6">@Html.DisplayFor(modelItem => item.PackageDescription)</div>
            <div class="col-md-3"></div>
        </div>
        <div class="col-md-12">
            <div class="col-md-6 text-right">
                Person per package: @Html.DisplayFor(modelItem => item.PersonPerPackage)
            </div>
            <div class="col-md-6 text-left">
                Price: @Html.DisplayFor(modelItem => price)
            </div>
        </div>
        <span></span>
        <div class="row" style="height:50px;"></div>
    </div>
}